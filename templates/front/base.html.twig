    <title>{% block metaTitle %}{% endblock metaTitle %}</title>

</head>
<body>

<header >
    <div class="header">
        <div class="w20">
            <a href="{{ path('front_media_list') }}">
                Accueil
            </a>
        </div>
        <div class="search">
            <form action="{{ path('front_search') }}" class="form relative" method="get">
                <input class="input" type="search" placeholder="Rechercher..." name="q" id="searchinput">
                <input type="submit" class="button" value="Rechercher">
                <div class="suggestions" id="suggestions"></div>
            </form>
        </div>
        <div class="w40">
            <div class="categories">
                <a href="{{ path('front_category_list') }}">Catégories</a>
            </div>
            
        </div>
</header>


{% block main %}{% endblock %}