{% extends "admin/base.html.twig" %}

{% block main %}

    {% for gcategory in gcategories.getAll %}
        <li>{{ gcategory.name }}</li>
    {% endfor %}

	<img src="{{ asset('media/' ~ media.src) }}" alt="{{ media.alt }}">

	<h2>{{ media.title }}</h2>

    {% for category in media.category %}

        <p> {{ category.name }}</p>

	{% endfor %}

    <a href="{{ path('admin_media_delete', {'id' : media.id} ) }}" class="delete">Supprimer l'image</a>
         <a href="{{ path('admin_media_update', {'id' : media.id} ) }}" class="update">Modifier l'image</a>

{% endblock %}